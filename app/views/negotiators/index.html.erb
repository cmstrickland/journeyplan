<h1>Listing Negotiators</h1>

<%= link_to "New", new_negotiator_path, class: "btn btn-default", role:"button" %>
<table class="table">
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @negotiators.each do |negotiator| %>
    <tr>
      <td><%= link_to negotiator.username, edit_negotiator_path(negotiator) %></td>
      <td><%= link_to 'Delete', negotiator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
